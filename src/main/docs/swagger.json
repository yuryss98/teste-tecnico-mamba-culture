{
  "openapi": "3.0.0",
  "info": {
    "title": "Campaigns Api",
    "version": "1.0.0"
  },
  "paths": {
    "/api/category/findAll": {
      "get": {
        "tags": [
          "category"
        ],
        "summary": "Find all categories",
        "responses": {
          "200": {
            "description": "All categories",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "body": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "integer",
                            "example": 1
                          },
                          "name": {
                            "type": "string",
                            "example": "Marketing"
                          },
                          "createdAt": {
                            "type": "string",
                            "example": "2024-09-26T22:24:08.319Z"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/campaign/create": {
      "post": {
        "tags": [
          "Campaign"
        ],
        "summary": "Create a campaign",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "name",
                  "startDate",
                  "endDate",
                  "campaignStatus",
                  "categoryId"
                ],
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "Campanha de Marketing"
                  },
                  "startDate": {
                    "type": "date",
                    "example": "2024-12-26"
                  },
                  "endDate": {
                    "type": "date",
                    "example": "2025-01-01"
                  },
                  "campaignStatus": {
                    "type": "string",
                    "enum": [
                      "ACTIVE",
                      "PAUSED",
                      "EXPIRED"
                    ]
                  },
                  "categoryId": {
                    "type": "integer",
                    "example": 1
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "New Campaign created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Campaign created successfully"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid date or invalid fields"
          },
          "404": {
            "description": "Category Not Found"
          },
          "409": {
            "description": "This campaign already exists"
          },
          "422": {
            "description": "\"campaignStatus\" must be one of [ACTIVE, PAUSED, EXPIRED]"
          }
        }
      }
    },
    "/api/campaign/delete": {
      "delete": {
        "tags": [
          "Campaign"
        ],
        "summary": "Delete a campaign",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "campaignId"
                ],
                "properties": {
                  "campaignId": {
                    "type": "integer",
                    "example": 1
                  }
                }
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "Campaign deleted"
          },
          "400": {
            "description": "Invalid field"
          },
          "404": {
            "description": "Campaign Not Found"
          }
        }
      }
    },
    "/api/campaign/findAll": {
      "get": {
        "tags": [
          "Campaign"
        ],
        "summary": "Find all campaigns",
        "responses": {
          "200": {
            "description": "All campaigns",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "body": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "integer",
                            "example": 1
                          },
                          "name": {
                            "type": "string",
                            "example": "Campanha de Marketing"
                          },
                          "startDate": {
                            "type": "string",
                            "example": "2024-09-26T22:24:08.319Z"
                          },
                          "endDate": {
                            "type": "string",
                            "example": "2024-09-26T22:24:08.319Z"
                          },
                          "campaignStatus": {
                            "type": "string",
                            "example": "ACTIVE"
                          },
                          "category": {
                            "type": "object",
                            "properties": {
                              "id": {
                                "type": "integer",
                                "example": 1
                              },
                              "name": {
                                "type": "string",
                                "example": "Marketing"
                              },
                              "createdAt": {
                                "type": "string",
                                "example": "2024-09-26T22:24:08.319Z"
                              }
                            }
                          },
                          "createdAt": {
                            "type": "string",
                            "example": "2024-09-26T22:24:08.319Z"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}